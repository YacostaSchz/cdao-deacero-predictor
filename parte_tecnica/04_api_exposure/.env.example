# Steel Price Predictor API - Environment Variables
# Copy to .env and fill with actual values

# Application
APP_NAME="Steel Rebar Price Predictor"
APP_VERSION="v2.0"
DEBUG=false

# GCP Configuration
PROJECT_ID=cdo-yacosta
REGION=us-central1

# Cloud Storage
MODEL_BUCKET=cdo-yacosta-models
MODEL_PATH=models/TWO_STAGE_MODEL.pkl
PREDICTION_CACHE_PATH=predictions/current.json

# Firestore
FIRESTORE_DATABASE=(default)
RATE_LIMIT_COLLECTION=rate_limits

# Secret Manager
API_KEYS_SECRET=steel-predictor-api-keys

# API Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600
CACHE_TTL_SECONDS=3600

# Prediction
DEFAULT_CONFIDENCE=0.95
WHOLESALE_DISCOUNT=0.8874

# CORS (comma-separated)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Local Development (optional - usar credenciales locales)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
